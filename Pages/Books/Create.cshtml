@page
@model BooksRazorApp.Pages.Books.CreateModel
@{
    ViewData["Title"] = "Create";
}


<h3 class="p-2">Create New Book</h3>

<div class="container mt-5 p-2">
    <form>
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-md-6">
                <input asp-for="Book.Name" class="form-control" autofocus/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-md-6">
                <input asp-for="Book.Author" class="form-control"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-md-6">
                <input asp-for="Book.ISBN" class="form-control"/>
            </div>
        </div>
    </form>
</div>